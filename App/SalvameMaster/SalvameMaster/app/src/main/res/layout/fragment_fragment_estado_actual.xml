<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="salvamemaster.ux.usach.cl.salvamemaster.master.fragmento.FragmentEstadoActual">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_estado_maestro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linear_datos_maestro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_wrench_grey600_48dp" />

            <TextView
                android:id="@+id/txtTituloEstadoMaster"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mensaje_fragmento_datos_master"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtDescripcionEstadoMaster"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/descripcion_fragmento_estado_master"
                android:textAlignment="center"
                android:textSize="20sp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>
