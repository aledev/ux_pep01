<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="match_parent" tools:context=".otros.TipoPerfilActivity">

    <LinearLayout
        android:id="@+id/linear_layoud_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtTituloLista"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:textAlignment="center"
            android:text="@string/title_tipo_perfil"/>

    </LinearLayout>


    <ListView
        android:id="@+id/tipo_perfil_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:headerDividersEnabled="false"
        android:layout_below="@+id/linear_layoud_titulo"
        />

</RelativeLayout>
